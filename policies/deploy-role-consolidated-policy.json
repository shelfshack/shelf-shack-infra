{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": "iam:PassRole",
      "Resource": [
        "arn:aws:iam::397562346696:role/shelfshack-*-execution-role",
        "arn:aws:iam::397562346696:role/shelfshack-*-task-role"
      ]
    },
    {
      "Sid": "ManageExecutionSecretsPolicyVersions",
      "Effect": "Allow",
      "Action": [
        "iam:CreatePolicyVersion",
        "iam:DeletePolicyVersion",
        "iam:SetDefaultPolicyVersion",
        "iam:GetPolicyVersion",
        "iam:ListPolicyVersions"
      ],
      "Resource": "arn:aws:iam::397562346696:policy/shelfshack-dev-execution-secrets"
    },
    {
      "Sid": "AttachExecutionSecretsPolicy1",
      "Effect": "Allow",
      "Action": [
        "iam:AttachRolePolicy",
        "iam:DetachRolePolicy"
      ],
      "Resource": [
        "arn:aws:iam::397562346696:policy/shelfshack-dev-execution-secrets",
        "arn:aws:iam::397562346696:role/shelfshack-dev-execution-role",
        "arn:aws:iam::397562346696:role/shelfshack-dev-task-role"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "ec2:CreateVpc",
        "ec2:DescribeVpcs",
        "ec2:DeleteVpc",
        "ec2:CreateSubnet",
        "ec2:DescribeSubnets",
        "ec2:DeleteSubnet",
        "ec2:CreateInternetGateway",
